---
import { Picture } from "astro:assets";

const { 
  heroImage,
  heroAlt,
  title,
  subtitle
} = Astro.props;
---

<main
  class="pl-10 grid lg:grid-cols-2 place-items-center pt-16 pb-8 md:pt-12 md:pb-24">
  <div class="p-20 md:order-1 hidden md:block">
    <Picture
      src={heroImage}
      alt={heroAlt}
      format="avif"
      class="rounded-xl"
    />
  </div>
  <div>
    <h1
      class="text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight xl:tracking-tighter">
      {title}
    </h1>
    <p class="text-lg mt-4 text-slate-600 max-w-xl">
      {subtitle}
    </p>
    <div class="mt-6 flex flex-col sm:flex-row gap-3">
      <slot />
    </div>
  </div>
</main>