---
import Container from "@components/container.astro";
import Link from "@components/ui/link.astro";
import Dropdown from "./dropdown.astro";
import { Astronav, MenuItems, MenuIcon } from "astro-navbar";

const menuitems = [
  {
    title: "Para estudiantes",
    children: [
      { title: "Para no programadores", path: "/roadmap/para-no-programadores" },
      { title: "Para principiantes", path: "/roadmap/para-principiantes" },
      { title: "Stack personalizado", path: "/roadmap/stack-personalizado" },
      { title: "Ingeniería de software", path: "/roadmap/software-engineering" },
      { title: "Kotlin Multiplatform", path: "https://kmp.jesusdmedinac.com/" },
    ]
  },
  {
    title: "Para empresas",
    children: [
      { title: "Desarrollo de sitios web gratis", path: "https://tally.so/r/wv2l84" },
      { title: "Desarrollo de apps móviles gratis", path: "https://tally.so/r/wv2l84" },
      { title: "Contrata talento", path: "https://tally.so/r/wv2l84" },
    ]
  },
  /*{
    title: "App Móvil",
    children: [
      { title: "Android", path: "https://tally.so/r/3E1E2A" },
      { title: "iOS", path: "https://tally.so/r/3E1E2A" },
    ],
  },
  {
    title: "Funciones",
    path: "#",
    children: [
      { title: "Action", path: "/" },
      { title: "Another action", path: "#" },
      { title: "Dropdown Submenu", path: "#" },
      { title: "404 Page", path: "/404" },
    ],
  },
  {
    title: "Precios",
    path: "/precios",
  },
  {
    title: "Acerca de",
    path: "/acerca-de",
  },
  {
    title: "Blog",
    path: "/blog",
  },
  {
    title: "Contacto",
    path: "/contact",
  },
  {
    title: "Pro Version",
    badge: true,
    path: "https://astroship-pro.web3templates.com/",
  },*/
];
---

<Container>
  <header class="flex flex-col lg:flex-row justify-between items-center my-5">
    <Astronav>
      <div class="flex w-full lg:w-auto items-center justify-between">
        <a href="/" class="text-lg"
          ><span class="text-paradiso font-bold text-slate-800">Desde0</span>
        </a>
        <div class="block lg:hidden">
          <MenuIcon class="w-4 h-4 text-gray-800" />
        </div>
      </div>
      <MenuItems class="hidden w-full lg:w-auto mt-2 lg:flex lg:mt-0">
        <ul class="flex flex-col lg:flex-row lg:gap-3">
          {
            menuitems.map((item, index) => (
              <>
                {item.children && (
                  <Dropdown
                    title={item.title}
                    children={item.children}
                    lastItem={index === menuitems.length - 1}
                  />
                )}

                {!item.children && (
                  <li>
                    <a
                      href={item.path}
                      class="flex lg:px-3 py-2 items-center text-gray-600 hover:text-gray-900">
                      <span> {item.title}</span>
                      {item.badge && (
                        <span class="ml-1 px-2 py-0.5 text-[10px] animate-pulse font-semibold uppercase text-white bg-indigo-600 rounded-full">
                          New
                        </span>
                      )}
                    </a>
                  </li>
                )}
              </>
            ))
          }
        </ul>
        <div class="lg:hidden flex items-center mt-3 gap-4">
          <Link href="https://tally.so/r/3E1E2A" style="muted" block size="md">Iniciar sesión</Link>
          <Link href="https://tally.so/r/3E1E2A" size="md" block>Crear cuenta</Link>
        </div>
      </MenuItems>
    </Astronav>
    <div>
      <!--<div class="hidden lg:flex items-center gap-4">
        <a href="https://tally.so/r/3E1E2A">Iniciar sesión</a>
        <Link href="https://tally.so/r/3E1E2A" size="md">Crear cuenta</Link>
      </div> -->
    </div>
  </header>
</Container>
